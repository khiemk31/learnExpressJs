extends ../views/header

block content 
    title User
    script(src='https://cdn.tailwindcss.com')
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                div
                    button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                        span.hamburger-box
                            span.hamburger-inner
            //profile me      
            .dropdown.user-menu(style="margin-left:750px; float: right;")
                button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                    img.user-image(src='assets/img/user/user.png' alt='')
                    span.d-none.d-lg-inline-block UserName
                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='#') Thông tin cá nhân
                    hr
                    a.dropdown-item(href='/login') Đăng xuất
        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng

                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')  Quản Lý Đơn Hàng
            .app-main__outer
                .app-main__inner
                    .pb-20
                        .col-lg-8.mx-auto.text-center
                            h1.display-4  Thể Loại
                        row.align-items-center
                            nav.navbar.navbar
                                form.form-inline(action="/category/search" , method="POST" ) 
                                    input.form-control.mr-sm-2(type='search' aria-label='Search' class='focus:outline-none' placeholder='Tìm thể loại . . .' x-model='search' name="category_name")
                                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
                        a.bg-gradient-to-l.from-cyan-500.to-blue-500.text-white.rounded-md.drop-shadow-md.transition-all.duration-700(href="/insertCategory" style="text-decoration: none;padding: 10px 10px 10px 10px;") 
                            button(type='submit') Thêm Thể Loại
                        .table.p-6
                            .dropdown.d-inline-block.mb-1
                                button#dropdownMenuButton.btn.btn-outline-info.dropdown-toggle(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' data-display='static') Bộ Lọc 
                                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                                    a.dropdown-item(href='/category') Tất cả thể loại
                                    a.dropdown-item(href='/category/deleted') Đã Xóa
                                    a.dropdown-item(href='/category/updated') Đã Sửa
                                    a.dropdown-item(href='/category/created') Sắp xếp theo ngày tạo mới nhất
                        .table.w-full.p-2
                            table.w-full.border
                                thead
                                    tr.border-b.bg-gray-50
                                        th
                                            .flex.items-center.justify-center Tên thể loại
                                        th
                                            .flex.items-center.justify-center Ngày thêm
                                        th
                                            .flex.items-center.justify-center Ngày sửa
                                        th
                                            .flex.items-center.justify-center Ngày xóa
                                        th
                                            .flex.items-center.justify-center Chức năng
                                tbody
                                    each i in listCategory
                                        tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                                            td.border-r.p-2= i.category_name
                                            td.border-r.p-2= i.created_at
                                            td.border-r.p-2= i.updated_at
                                            td.border-r.p-2= i.deleted_at
                                            td.text-right
                                                .dropdown.show.d-inline-block.widget-dropdown
                                                    a#dropdown-recent-order1.dropdown-toggle.icon-burger-mini(href='' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false' data-display='static')
                                                    ul.dropdown-menu.dropdown-menu-right(aria-labelledby='dropdown-recent-order1')
                                                        a(href='/category/getUpdateCategory/'+i.category_id )
                                                            li.dropdown-item
                                                                | Sửa Thể Loại
                                                        a(href='/category/remove/'+i.category_id   )
                                                            li.dropdown-item
                                                                | Xóa Thể Loại

            script(src='http://maps.google.com/maps/api/js?sensor=true')
