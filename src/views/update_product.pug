extends ../views/header

block content 
    title Trang Chủ
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                    div
                        button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                            span.hamburger-box
                                span.hamburger-inner
            //profile me 
            .dropdown.user-menu(style="margin-left:750px; float: right;")
                button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                    img.user-image(src='assets/img/user/user.png' alt='')
                    span.d-none.d-lg-inline-block UserName
                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='#') Thông tin cá nhân
                    hr
                    a.dropdown-item(href='/login') Đăng xuất
        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng
                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')    Quản Lý Đơn Hàng
            // content
            .app-main__outer
                .app-main__inner
                    // code here
                    .pb-20
                        h1.text-blue-400.font-semibold.mb-14(class='text-[40px] leading-[55px]')
                            |Sửa thông tin sản phẩm
                        form(action='/product/update' method='post' )
                            // Thông tin
                            .flex.justify-between.mb-20
                                .grid.grid-rows-6.gap-y-4.mb-6(class='w-[60%]')
                                    .media-body
                                        div(style="width: 400px; float: left")
                                            p.ml-2(class='text-[#4285F4] text-[12px]') Mã Sản Phẩm
                                            input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='product_id' value=product.product_id readonly="readonly")
                                        div(style="width: 200px; float: right;")
                                            img(src=product.product_image, alt="")
                                        div(style="width: 400px; float: left")
                                            p.ml-2(class='text-[#4285F4] text-[12px]') Tên sản phẩm
                                            input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='product_name' value=product.product_name readonly="readonly")
                                        .media-body
                                            div(style="width: 200px ; float: left;")
                                                p.ml-2(class='text-[#4285F4] text-[12px]') Giá bán
                                                input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='10000' name='price' value=product.price readonly="readonly")
                                    p.ml-2(class='text-[#4285F4] text-[20px]') Cập nhật số lượng hàng theo từng size
                                        table.table.table-striped
                                            thead
                                                tr
                                                    th(scope='col') Loại size
                                                    th(scope='col') Số lượng
                                            each size in listSize
                                                tbody
                                                    tr
                                                        td()= size.size  
                                                        td
                                                            input(type='number' min='0' max='1000'  value=size.quantity name="quantity")
                                        // button
                            .flex.justify-center
                                input.bg-gradient-to-r.from-cyan-500.to-blue-500.text-white.px-10.py-4.rounded-md.drop-shadow-md.transition-all.duration-700(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Cập nhật thông tin' name='submit' style="width:30px,height:30px")
            script(src='http://maps.google.com/maps/api/js?sensor=true')
