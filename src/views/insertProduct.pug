extends ../views/header

block content 
    title Trang Chủ
    script(src='https://cdn.tailwindcss.com')
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                    div
                        button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                            span.hamburger-box
                                span.hamburger-inner
            //profile me 
            .dropdown.user-menu(style="margin-left:750px; float: right;")
                button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                    img.user-image(src='assets/img/user/user.png' alt='')
                    span.d-none.d-lg-inline-block UserName
                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='#') Thông tin cá nhân
                    hr
                    a.dropdown-item(href='/login') Đăng xuất
        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng
                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')    Quản Lý Đơn Hàng
            // content
            .app-main__outer
                .app-main__inner
                    // code here
                    .pb-20
                        h1.text-blue-400.font-semibold.mb-14(class='text-[40px] leading-[55px]')
                            |Thêm Sản Phẩm
                        form(action='/product/addProduct' method='post' enctype='multipart/form-data')
                            h2.text-blue-400.text-center.mb-6(class='text-[20px]')
                                | Thông Tin Sản Phẩm
                            // Thông tin
                            .flex.justify-between.mb-20
                                .grid.grid-rows-6.gap-y-4.mb-6(class='w-[60%]')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Tên sản phẩm
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='product_name')
                                    .media-body
                                        div(style="width: 200px ; float: left;")
                                            p.ml-2(class='text-[#4285F4] text-[12px]') Giá bán
                                            input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='10000' name='price')
                                        div(style="width: 200px ; float: left;")
                                            p.ml-2(class='text-[#4285F4] text-[12px]' style='padding-left:40px;') Giá nhập
                                            input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' style="width: 200px;margin-left: 40px;" min='10000' name='import_price')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Th&#x1EC3; Thể Loại
                                        select.bg-white.rounded-md(name="category_name" class='w-[100px] h-[40px]')
                                            each i in  listCategory 
                                                option( name="category_name")= i.category_name
                                    .flex.items-center(class='mb-[34px]')
                                        .w-10.mr-4
                                            label
                                            | S 
                                        input#size_s.w-40.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='0' max='1000' name='quantityS' placeholder='Số lượng')
                                    .flex.items-center(class='mb-[34px]')
                                        .w-10.mr-4
                                            label
                                            | M
                                        input#size_m.w-40.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='0' max='1000' name='quantityM' placeholder='Số lượng')
                                    .flex.items-center(class='mb-[34px]')
                                        .w-10.mr-4
                                            label
                                            | L
                                        input#size_l.w-40.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='0' max='1000' name='quantityL' placeholder='Số lượng')
                                    .flex.items-center
                                        .w-10.mr-4
                                            label   
                                            | XL
                                        input#size_xl.w-40.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='number' min='0' max='1000' name='quantityXL' placeholder='Số lượng')
                            // Chọn ảnh
                            .mb-6
                                h2.text-center.mb-10(class='text-[20px] text-[#E51B23]')
                                    | Chọn Ảnh Sản Phẩm
                                .flex.justify-between.mb-6
                                    .flex
                                        input#fileToUpload1(type='file' name='product_image')
                                h2.text-center.mb-10(class='text-[20px] text-[#E51B23]')
                                    | Chọn Ảnh Nền 
                                .flex.justify-between.mb-6
                                    .flex
                                        input#fileToUpload2(type='file' name='image_1')
                                    .flex.justify-center
                                        input#fileToUpload3(type='file' name='image_2')
                                    .flex
                                        input#fileToUpload3(type='file' name='image_3')
                            // button
                            .flex.justify-center
                                input.bg-gradient-to-r.from-cyan-500.to-blue-500.text-white.px-10.py-4.rounded-md.drop-shadow-md.transition-all.duration-700(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Thêm sản phẩm' name='submit')
            script(src='http://maps.google.com/maps/api/js?sensor=true')
