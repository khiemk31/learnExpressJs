extends ../views/header

block content 
    title DETAIL_USER
    script(src='https://cdn.tailwindcss.com')
    script(src='assets/plugins/nprogress/nprogress.js')

    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                    div
                        button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                            span.hamburger-box
                                span.hamburger-inner

        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner(style="width: 180px;")
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/home')
                                    i.metismenu-icon.pe-7s-home
                                    |                                     Trang chủ
                            li
                                a(href='/user')
                                    i.metismenu-icon.pe-7s-user
                                    |                                     Người dùng

                            li
                                a(href='/category')
                                    i.metismenu-icon.pe-7s-box2
                                    |                                     Thể loại

                            li
                                a(href='/product')
                                    i.metismenu-icon.pe-7s-box2
                                    |                                     Sản phẩm
                            li
                                a(href='/bill')
                                    i.metismenu-icon.pe-7s-note2
                                    |                                     Quản Lý Đơn Hàng
                            li
                                a(href='/login')
                                    i.metismenu-icon.pe-7s-note2
                                    |                                     Đăng Xuất

            .app-main__outer
                .content-wrapper
                    .content
                        .bg-white.border.rounded
                            h1text-blue-400.font-semibold.mb-4(class='text-[40px] leading-[55px]')
                                | Thông tin chi tiết nhân viên
                                .row.no-gutters
                                    .col-lg-4.col-xl-3
                                        .profile-content-left.pt-5.pb-3.px-3.px-xl-5
                                            .card.text-center.widget-profile.px-0.border-0
                                                .card-img.mx-auto.rounded-circle
                                                    img(src='' alt='user image' style="padding:10px;")
                                                .card-body
                                                    p(style="color: #000;width: 100% ; font-size: 20px; margin-bottom:15px;")
                                    .col-lg-8.col-xl-9
                                        .profile-content-right.py-5
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') Tên nhân viên
                                                input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value=user.user_name style="width:600px;" disabled)
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') số điện thoại nhân viên
                                                input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value=user.phone style="width:600px;" disabled)
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') ngày sinh
                                                input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value=date_of_birth style="width:600px;" disabled)
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') địa chỉ
                                                input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value=user.address style="width:600px;" disabled)
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') giới tính
                                                if(user.gender=="1")
                                                    input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value="nam" style="width:600px;" disabled)
                                                else if(user.gender=="2")
                                                    input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value="nữ" style="width:600px;" disabled)
                                            div
                                                p.ml-2(class='text-[#4285F4] text-[15px]') ngày thêm
                                                input.text-base.rounded-md.px-3.py-2(class='text-[#333333]' type='text' value=user.created_at style="width:600px;" disabled)

                                        button.bg-gradient-to-l.from-cyan-500.to-blue-500.text-white.px-10.py-4.rounded-md.drop-shadow-md.transition-all.duration-700(type='submit')
                                            a(href="/insertAdmin") Sửa thông tin admin