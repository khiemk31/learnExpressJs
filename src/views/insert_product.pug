extends ../views/header

block content 
    title Thêm Sản Phẩm
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                    div
                        button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                            span.hamburger-box
                                span.hamburger-inner
        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng
                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')    Quản Lý Đơn Hàng
            .app-main__outer
                .app-main__inner
                    .pb-20
                        .container.py-4
                        .row.mb-4
                            .col-lg-8.mx-auto.text-center
                                h1.display-4 Thêm sản phẩm mới
                        .row
                            .col-lg-6.mx-auto
                                .bg-white.rounded-lg.shadow-sm.p-5
                                    form.was-validated(action='/product/addProduct' method='post' enctype='multipart/form-data' role='form')
                                        .form-group
                                            label(for='username') Tên Sản Phẩm
                                            input.form-control(type='text' placeholder='Nhập tên sản phẩm ...' name='product_name' required='')
                                            .invalid-feedback Chưa nhập tên sản phẩm
                                        .form-group
                                            label(for='cardNumber') Giá Bán
                                            input.form-control(type='number' placeholder='Nhập giá bán ...' min='10000' name='price' required='')
                                            .invalid-feedback Chưa nhập giá bán
                                        .form-group
                                            select.custom-select(name="category_name" class='w-[150px] h-[40px]' required='')
                                                option(value="") Chọn thể loại
                                                each i in  listCategory 
                                                    option( value=i.category_name name="category_name")=i.category_name
                                            .invalid-feedback Chưa chọn thể loại
                                        .form-group
                                            table.table
                                                thead
                                                    th(scope='col') Size
                                                    th(scope='col') S
                                                    th(scope='col') M
                                                    th(scope='col') L
                                                    th(scope='col') XL
                                                tbody
                                                    tr(style= 'height : 100px')
                                                        th
                                                            label(style='width:100px') Số Lượng
                                                        td 
                                                            input( placeholder="Nhập Số Lượng" type='number' min='0' max='1000' name='quantityS' style='width: 125px' required='')
                                                        td 
                                                            input( placeholder="Nhập Số Lượng" type='number' min='0' max='1000' name='quantityM' style='width: 125px' required='' )
                                                        td 
                                                            input( placeholder="Nhập Số Lượng" type='number' min='0' max='1000' name='quantityL' style='width: 125px' required='')
                                                        td 
                                                            input( placeholder="Nhập Số Lượng" type='number' min='0' max='1000' name='quantityXL' style='width: 125px' required='')
                                        .mb-4
                                            .form-group
                                                label.mb-10(class='text-[16px] text-[#E51B23]') Chọn ảnh sản phẩm
                                                .flex
                                                    input#fileToUpload1(type='file' name='product_image')
                                            .form-group
                                                label.mb-10(class='text-[16px] text-[#E51B23]')  Chọn Ảnh Nền
                                                .flex
                                                    input#fileToUpload2(type='file' name='image_1' required='')
                                                .flex
                                                    input#fileToUpload3(type='file' name='image_2' required='')
                                                .flex
                                                    input#fileToUpload4(type='file' name='image_3' required='')
                                        .flex.justify-center
                                            input.bg-gradient-to-r.from-cyan-400.to-blue-400.text-white.px-6.py-3.rounded-md.drop-shadow-md.transition-all.duration-500(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Thêm Sản Phẩm' name='submit')
                script(src='http://maps.google.com/maps/api/js?sensor=true')
