doctype html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    // import font
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100;200;300;400;500;600&display=swap' rel='stylesheet')
    // import tailwindcss
    script(src='https://cdn.tailwindcss.com')
    style 
        include css/main.css
    // import js
    script 
        include js/main.js
    // title
    title Thêm Thể Loại
.app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
    // header
    .app-header.header-shadow
        // logo
        .app-header__logo
            .logo-src Model Fashion
            .header__pane.ml-auto
                div
                    button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                        span.hamburger-box
                            span.hamburger-inner
    // body
    .app-main
        // menu left
        .app-sidebar.sidebar-shadow
            .scrollbar-sidebar
                .app-sidebar__inner
                    ul.vertical-nav-menu
                        li.app-sidebar__heading Menu
                        li
                            a(href='/main') Trang chủ
                        li
                            a(href='/user') Người dùng
                        li
                            a(href='/category') Thể loại
                        li
                            a(href='/product') Sản phẩm
                        li
                            a(href='/bill') Quản Lý Đơn Hàng
        // content
        .app-main__outer
            .app-main__inner
                .pb-20
                    .container.py-4
                    .row.mb-4
                        .col-lg-8.mx-auto.text-center
                            h1.display-4 Thêm thể loại
                    .row
                        .col-lg-6.mx-auto
                            .bg-white.rounded-lg.shadow-sm.p-5
                                form.was-validated(action='/addCategory' method='POST' enctype='multipart/form-data' role='form')
                                    .form-group
                                        label(for='username') Tên Thể Loại
                                        input.form-control(type='text' placeholder='Nhập thể loại ...' name='category_name' required='')
                                        .invalid-feedback Chưa nhập thể loại
                                    .mb-4
                                        .form-group
                                            label.mb-10(class='text-[16px] text-[#E51B23]') Chọn ảnh minh họa
                                            .flex
                                                input#fileToUpload1(type='file' name='category_image')
                                    .flex.justify-center
                                        input.bg-gradient-to-r.from-cyan-400.to-blue-400.text-white.px-6.py-3.rounded-md.drop-shadow-md.transition-all.duration-500(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Thêm Thể Loại' name='submit')
        script(src='http://maps.google.com/maps/api/js?sensor=true')
