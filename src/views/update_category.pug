extends ../views/header

block content
    title Sửa Sản Phẩm
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src Model Fashion
                .header__pane.ml-auto
                    div
                        button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                            span.hamburger-box
                                span.hamburger-inner
        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng
                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product') Sản phẩm
                            li
                                a(href='/bill') Quản Lý Đơn Hàng
            // content
            .app-main__outer
                .app-main__inner
                    // code here
                    .pb-20
                        h1.text-blue-400.font-semibold.mb-14(class='text-[40px] leading-[55px]')
                            | Sửa Tên Thể Loại
                        form(action='/category/update' method='POST' )
                            .flex.justify-between.mb-20
                                .grid.grid-rows-1.gap-y-4.mb-6(class='w-[40%]')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[14px]' ) Mã Thể Loại
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='category_id' value=category.category_id  readonly="readonly")
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[14px]' ) Tên Thể Loại
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='category_name' value=category.category_name)
                            // button
                            .flex.justify-center
                                input.bg-gradient-to-r.from-cyan-500.to-blue-500.text-white.px-10.py-4.rounded-md.drop-shadow-md.transition-all.duration-500(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Sửa' )
            script(src='http://maps.google.com/maps/api/js?sensor=true')
