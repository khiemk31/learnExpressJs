extends ../views/header
block content 
    title Chi Tiết Hóa Đơn
    script(src='https://cdn.tailwindcss.com')
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                div
                    button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                        span.hamburger-box
                            span.hamburger-inner
            //profile me      
            .dropdown.user-menu(style="margin-left:750px; float: right;")
                button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                    img.user-image(src='assets/img/user/user.png' alt='')
                    span.d-none.d-lg-inline-block UserName
                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='#') Thông tin cá nhân
                    hr
                    a.dropdown-item(href='/login') Đăng xuất

        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng

                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')  Quản Lý Đơn Hàng
            // content
            .app-main__outer
                .app-main__inner
                    // code here
                    h1.text-blue-400.font-semibold.mb-5(class='text-[20px] leading-[55px]') Chi Tiết Hóa Đơn
                    section.bg-gray-100.py-1
                        .bg-white(class='md:rounded-b-md')
                        .border-b.border-gray-200.p-9
                            .items-top.flex.justify-between
                                div
                                    p.text-sm.font-medium.text-gray-400 Mã Đơn
                                    p= bill.bill_id
                                div
                                    p.text-sm.font-medium.text-gray-400 Tên Khách Hàng
                                    p= bill.user_name
                                div
                                    p.text-sm.font-medium.text-gray-400 Số Điện Thoại
                                    p= bill.phone
                                div
                                    p.text-sm.font-medium.text-gray-400 Ngày Đặt
                                    p= bill.created_at
                                if (bill.status=="Đã Giao")
                                    div
                                        p.text-sm.font-medium.text-gray-400 Ngày Giao
                                        p= bill.updated_at
                                div
                                    p.text-sm.font-medium.text-gray-400 Trạng Thái
                                    p= bill.status
                        .border-b.border-gray-200.p-9
                            p.text-sm.font-medium.text-gray-400 Lưu Ý
                            p.text-sm Thank you for your order.
                        table.w-full.border
                            thead
                                tr.border-b.bg-gray-50
                                    th
                                        .flex.items-center.justify-center Sản phẩm
                                    th
                                        .flex.items-center.justify-center
                                    th
                                        .flex.items-center.justify-center Size
                                    th
                                        .flex.items-center.justify-center Số lượng
                                    th
                                        .flex.items-center.justify-center Giá tiền 

                            tbody
                                each product in listProduct  
                                    tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                                        td.border-r.p-2= product.product_name
                                        td.border-r.p-2
                                            img(src=product.product_image, alt="" style='width:80px; height:80px;')
                                        td.border-r.p-2= product.size
                                        td.border-r.p-2= product.quantity
                                        td.border-r.p-2= product.price
                        .border-b.border-gray-200.p-9
                            .space-y-3
                            .flex.justify-between
                                div
                                p.text-lg.font-bold.text-black Tổng Tiền
                                p.text-lg.font-bold.text-black= bill.total_price+ " Đ"
            script(src='http://maps.google.com/maps/api/js?sensor=true')
