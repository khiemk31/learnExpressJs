extends ../views/header

block content 
  title Trang Chủ
  .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
    // header
    .app-header.header-shadow
      // logo
      .app-header__logo
        .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
        .header__pane.ml-auto
          div
            button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
              span.hamburger-box
                span.hamburger-inner
      //profile me 
      .dropdown.user-menu(style="margin-left:750px; float: right;")
        button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
          img.user-image(src='assets/img/user/user.png' alt='')
          span.d-none.d-lg-inline-block UserName
        .dropdown-menu(aria-labelledby='dropdownMenuButton')
          a.dropdown-item(href='#') Thông tin cá nhân
          hr
          a.dropdown-item(href='/login') Đăng xuất

    // body
    .app-main
      // menu left
      .app-sidebar.sidebar-shadow
        .scrollbar-sidebar
          .app-sidebar__inner
            ul.vertical-nav-menu
              li.app-sidebar__heading Menu
              li
                a(href='/main') Trang chủ
              li
                a(href='/user') Người dùng
              li
                a(href='/category') Thể loại
              li
                a(href='/product')  Sản phẩm
              li
                a(href='/bill')    Quản Lý Đơn Hàng

      // content
      .app-main__outer
        .app-main__inner
          // code here
          .pb-20
            h1.text-blue-400.font-semibold.mb-4(class='text-[20px] leading-[40px]') Doanh Thu Từng Tháng
            .table.w-full.p-2
              table.w-full.border
                thead
                  tr.border-b.bg-gray-50
                    th
                      .flex.items-center.justify-center Tháng
                    th
                      .flex.items-center.justify-center Doanh Thu
                tbody
                  each i in ListDoanhThu  
                    tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                      td.border-r.p-2=  p=i.month 
                      td.border-r.p-2=  p=i.DoanhThu + " đ"

            h1.text-blue-400.font-semibold.mb-4(class='text-[20px] leading-[40px]')  TOP 10 Khách Đặt Nhiều Đơn Nhất
            .table.w-full.p-2
              table.w-full.border
                thead
                  tr.border-b.bg-gray-50
                    th
                      .flex.items-center.justify-center User name
                    th
                      .flex.items-center.justify-center Số Lượng Đơn 
                tbody
                  each i in listTop10User  
                    tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                      td.border-r.p-2= i.user_name
                      td.border-r.p-2= i.SoLuongDon
            h1.text-blue-400.font-semibold.mb-4(class='text-[20px] leading-[40px]')  Thống Kê Trạng Thái Đơn
            .table.w-full.p-2
              table.w-full.border
                thead
                  tr.border-b.bg-gray-50
                    th
                      .flex.items-center.justify-center Trạng Thái
                    th
                      .flex.items-center.justify-center Số Lượng  
                tbody
                  tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                    td.border-r.p-2 Đã Giao
                    td.border-r.p-2=countBillDone
                  tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                    td.border-r.p-2 Đã Hủy
                    td.border-r.p-2=countBillCanceled
                  tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                    td.border-r.p-2 Đã Hoàn
                    td.border-r.p-2=countBillReturnRequest
                  tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                    td.border-r.p-2 Đang Chờ Xử Lý
                    td.border-r.p-2=countBillWaiting
                  tr.border-b.bg-gray-100.text-center.text-sm.text-gray-600
                    td.border-r.p-2 Giao Hàng Thất Bại
                    td.border-r.p-2=countBillFail




              script(src='http://maps.google.com/maps/api/js?sensor=true')
