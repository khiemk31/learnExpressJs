extends ../views/header

block content 
    title Add User
    script(src='https://cdn.tailwindcss.com')
    .app-container.app-theme-white.body-tabs-shadow.fixed-sidebar.fixed-header
        // header
        .app-header.header-shadow
            // logo
            .app-header__logo
                .logo-src(style="color: #000;width: 100% ; font-size: 25px; margin-bottom:15px;") Model Fashion
                .header__pane.ml-auto
                div
                    button.hamburger.close-sidebar-btn.hamburger--elastic(type='button' data-class='closed-sidebar')
                        span.hamburger-box
                            span.hamburger-inner
            //profile me      
            .dropdown.user-menu(style="margin-left:750px; float: right;")
                button.dropdown-toggle.nav-link(href='#' data-toggle='dropdown')
                    img.user-image(src='assets/img/user/user.png' alt='')
                    span.d-none.d-lg-inline-block UserName
                .dropdown-menu(aria-labelledby='dropdownMenuButton')
                    a.dropdown-item(href='#') Thông tin cá nhân
                    hr
                    a.dropdown-item(href='/login') Đăng xuất

        // body
        .app-main
            // menu left
            .app-sidebar.sidebar-shadow
                .scrollbar-sidebar
                    .app-sidebar__inner
                        ul.vertical-nav-menu
                            li.app-sidebar__heading Menu
                            li
                                a(href='/main') Trang chủ
                            li
                                a(href='/user') Người dùng

                            li
                                a(href='/category') Thể loại
                            li
                                a(href='/product')  Sản phẩm
                            li
                                a(href='/bill')  Quản Lý Đơn Hàng
            // content
            .app-main__outer
                .app-main__inner
                    // code here
                    .pb-20
                        h1.text-blue-400.font-semibold.mb-14(class='text-[40px] leading-[55px]')
                            | Thêm User
                        form(action='/user/insertUser' method='post' enctype="multipart/form-data")
                            h2.text-blue-400.text-center.mb-6(class='text-[20px]')
                                | Thông tin user
                            // Thông tin
                            .flex.justify-between.mb-20
                                .grid.grid-rows-6.gap-y-4.mb-6(class='w-[60%]')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Tên
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='user_name')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Số điện thoại
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='phone' name='phone')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Địa chỉ
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='text' name='address')

                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Giới tính
                                        select.bg-white.rounded-md(name='gender' id='' class='w-[100px] h-[40px]')
                                            option(name="gender" value=1) Nam
                                            option(name="gender" value=2) Nữ

                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Vị trí
                                        select.bg-white.rounded-md(name='role' id='' class='w-[100px] h-[40px]')
                                            option(name="role" value="admin") admin
                                            option(name="role" value="user") user
                                    // Chọn ảnh
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Ảnh đại diện
                                        .flex.justify-between.mb-6
                                            .flex
                                                input#fileToUpload1(type='file' name='avatar')
                                    div
                                        p.ml-2(class='text-[#4285F4] text-[12px]') Mật khẩu
                                        input.w-full.text-base.rounded-md.px-3.py-2(class='text-[#333333] border-[1px] border-[#333333]' type='password' name='password')
                            .flex.justify-center
                                input.bg-gradient-to-r.from-cyan-500.to-blue-500.text-white.px-10.py-4.rounded-md.drop-shadow-md.transition-all.duration-700(class='hover:-translate-y-1 hover:bg-gradient-to-l' type='submit' value='Thêm User' )
            script(src='http://maps.google.com/maps/api/js?sensor=true')
