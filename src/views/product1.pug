doctype html
head
    meta(charset='utf-8')
    link(rel='apple-touch-icon' sizes='76x76' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    link(rel='icon' type='image/png' href='https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    title Model Fashion
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport')

    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700,200' rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css' rel='stylesheet')
    // CSS Files
    style 
        include ./assets/css/bootstrap.min.css
    style 
        include ./assets/css/paper-dashboard.css 
    style 
        include ./assets/demo/demo.css
.wrapper
    .sidebar(data-color='white' data-active-color='danger')
        .logo
            a.simple-text.logo-mini(href='/main')
                .logo-image-small
                    img(src="https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png")
            a.simple-text.logo-normal(href='/main')
                | Model Fashion
        .sidebar-wrapper
            ul.nav
                li
                    a(href='/main')
                        i.nc-icon.nc-chart-pie-36
                        p Dashboard
                li
                    a(href='/user')
                        i.nc-icon.nc-circle-10
                        p User
                li
                    a(href='/category')
                        i.nc-icon.nc-bullet-list-67
                        p Category
                li.active
                    a(href='/product')
                        i.nc-icon.nc-align-left-2
                        p Product
                li
                    a(href='#')
                        i.nc-icon.nc-money-coins
                        p Voucher
                li
                    a(href='/bill')
                        i.nc-icon.nc-delivery-fast
                        p Bill
                li
                    a(href='/profile')
                        i.nc-icon.nc-single-02
                        p Profile
                li.active-pro
                    a(href='#')
                        i.nc-icon.nc-user-run
                        p Log Out
    .main-panel
        nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
            .container-fluid
                .navbar-wrapper
                    a.navbar-brand(href='#') Quản Lý Sản Phẩm
                #navigation.collapse.navbar-collapse.justify-content-end
                    a.btn.btn-primary.justify-content-center(href='#' role='button') Thêm sản phẩm
                    form.ml-2
                        .input-group.no-border
                            input.form-control(type='text' value='' placeholder='Search...')
                            .input-group-append
                                .input-group-text
                                    i.nc-icon.nc-zoom-split
        .content
            .btn-group
                button.btn.btn-info(type='button') Thể Loại
                button.btn.btn-info.dropdown-toggle.dropdown-toggle-split(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                    span.sr-only Toggle Dropdown
                .dropdown-menu
                    a.dropdown-item(href='#') Thể loại 1
                    a.dropdown-item(href='#') Thể loại 2
                    a.dropdown-item(href='#') Thể loại 3
                    a.dropdown-item(href='#') Thể loại 4
            .btn-group
                button.btn.btn-info(type='button') Lọc
                button.btn.btn-info.dropdown-toggle.dropdown-toggle-split(type='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                    span.sr-only Toggle Dropdown
                .dropdown-menu
                    a.dropdown-item(href='#') Điều kiện 1
                    a.dropdown-item(href='#')  Điều kiện 2
                    a.dropdown-item(href='#')  Điều kiện 3
                    a.dropdown-item(href='#')  Điều kiện 4
                    a.dropdown-item(href='#')  Điều kiện 5
            .row
                each i in listProduct 
                    .col-md-2.pl-2
                        .card(style='width: 16rem;')
                            img.card-img-top.mb-2(src=i.product_image style='width: 16rem; height: 300px;' )
                            card-body.text-center
                                a(href="#") 
                                    p.card-title.p-1.text-info(style=' height: 3rem ; font-size:16px')=i.product_name
                                p.card-text.mt-4.mb-4.text-danger.font-weight-bold= "Giá : "  + i.price + " đ"
script
    include ./assets/js/core/jquery.min.js
script
    include ./assets/js/core/popper.min.js
script
    include ./assets/js/core/bootstrap.min.js
script
    include ./assets/js/plugins/perfect-scrollbar.jquery.min.js
script
    include ./assets/js/plugins/chartjs.min.js
script
    include ./assets/js/plugins/bootstrap-notify.js
script
    include ./assets/js/paper-dashboard.min.js
script
    include ./assets/demo/demo.js