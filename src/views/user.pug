.wrapper
    .sidebar(data-color='white' data-active-color='danger')
        .logo
            a.simple-text.logo-mini(href='/main')
                .logo-image-small
                    img(src="https://res.cloudinary.com/cde/image/upload/v1658206315/Icon/logo_cdrkpi.png")
            a.simple-text.logo-normal(href='/main')
                | Model Fashion
        .sidebar-wrapper
            ul.nav
                li
                    a(href='/main')
                        i.nc-icon.nc-chart-pie-36
                        p Dashboard
                li.active
                    a(href='/user')
                        i.nc-icon.nc-circle-10
                        p User
                li
                    a(href='#')
                        i.nc-icon.nc-bullet-list-67
                        p Category
                li
                    a(href='#')
                        i.nc-icon.nc-align-left-2
                        p Product
                li
                    a(href='#')
                        i.nc-icon.nc-money-coins
                        p Voucher
                li
                    a(href='#')
                        i.nc-icon.nc-delivery-fast
                        p Bill
                li
                    a(href='/profile')
                        i.nc-icon.nc-single-02
                        p Profile
                li.active-pro
                    a(href='#')
                        i.nc-icon.nc-user-run
                        p Log Out
    .main-panel
        nav.navbar.navbar-expand-lg.navbar-absolute.fixed-top.navbar-transparent
            .container-fluid
                .navbar-wrapper
                    a.navbar-brand(href='#') Quản Lý Tài Khoản
                #navigation.collapse.navbar-collapse.justify-content-end
                    a.btn.btn-primary.justify-content-center(href='#' role='button') Tạo Tài Khoản
                    form.ml-2
                        .input-group.no-border
                            input.form-control(type='text' value='' placeholder='Search...')
                            .input-group-append
                                .input-group-text
                                    i.nc-icon.nc-zoom-split
                    ul.navbar-nav
                        li.nav-item.btn-rotate.dropdown
                            a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                i.nc-icon.nc-tile-56
                            .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownMenuLink')
                                a.dropdown-item(href='#') Tất cả tài khoản
                                a.dropdown-item(href='#') Tài khoản Admin
                                a.dropdown-item(href='#') Tài khoản khách hàng
                                a.dropdown-item(href='#') Tài khoản bị khóa
        .content
            .row
                .col-md-12
                    .card
                        .card-header
                            h4.card-title  Quản Lý Người Dùng
                        .card-body
                            .table-responsive
                                table.table
                                    thead.text-primary
                                        th STT
                                        th Tên 
                                        th Số Điện Thoại
                                        th Giới Tính
                                        th Loại Tài Khoản
                                        th Tình Trạng
                                        th Xem chi tiết
                                    tbody
                                        each user,index in listUser  
                                            tr
                                                td= index+1
                                                td= user.user_name
                                                td= user.phone
                                                if (user.gender===1)
                                                    td Nam
                                                else  
                                                    td Nữ
                                                td= user.permission
                                                if (user.active===0)
                                                    td Hoạt Động
                                                else  
                                                    td Bị Khóa
                                                td
                                                    a(href='/user/userDetail/?user_id='+user.user_id )
                                                        li.dropdown-item Xem chi tiết
                                nav(aria-label='...')
                                    ul.pagination
                                        li.page-item
                                            -var number1=parseInt(pageNumber)-1
                                            if(number1>0)
                                                a.page-link(href='/user/?pageNumber='+number1 ) Previous
                                        each page in listPage
                                            if(page==pageNumber)
                                                li.page-item.active
                                                    a.page-link(href='/user/?pageNumber='+page)=page
                                                    span.sr-only (current)= index
                                            else 
                                                li.page-item
                                                    a.page-link(href='/user/?pageNumber='+page)= page
                                        li.page-item
                                            -var number2= parseInt(pageNumber)+1
                                            a.page-link(href='/user/?pageNumber='+number2) Next           
